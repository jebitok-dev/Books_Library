{
    "env": {
      "browser": true,
      "es6": false,
      "jest": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "extends": ["airbnb-base"],
    "rules": {
      "no-shadow": "off",
      "no-param-reassign": "off",
      "eol-last": "off",
      "no-use-before-define": ["error", {"functions": false, "classes": false}]
    },
    "ignorePatterns": [
      "dist/",
      "build/"
    ],
    "trailing-comma": [true, {
      "singleline": "never",
      "multiline": {
        "objects": "always",    
        "arrays": "always",
        "functions": "never",
        "typeLiterals": "ignore"
      }
    }]
}